* {
    margin: 0;
    padding: 0;
}

html,body {
    background-color: #020302;
    height: 100%;
    width: 100%;
    overflow: auto;
    font-family: Verdana, Arial, sans-serif;
    color: #e7f0ec;
    font-size: 1.0em;
    line-height: 1.2em;
}

body {
    background-image: url(<%= asset_path 'background2.png' %>);
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: 50% 0;
}

h1 {
    font-size: 150%;
    margin-bottom: 15px;
}

h2 {
    font-size: 130%;
    margin-bottom: 5px;
    border-bottom: 1px solid #e7f0ec;
    padding-bottom: 5px;
}

h3 {
    font-size: 130%;
}

h4 {
    font-size: 120%;
}

img.centered {
    margin: 0 auto;
    display: block;	
}

a {
    text-decoration: none;
}

a.link,
a:link,
a.visited,
a:visited,
a.active,
a:active {
    color: #82bde4;
}

ul {
    list-style-type: none;
}

table {
   text-align: center
 }

#container {
    margin: 0 auto;
    background-color: #020302;
    width: 500px;
    min-height: 669px;
    position: relative;
    left: 6px;
}

#fenster {
    margin: 10px auto;
    background-color: #eee0c4;
    min-height: 95%;
    left: 0; 
    width: 960px;  
    position: relative; 
    top: 0; 
    border: dotted 2px #000;
}

#logo {
    border: 0;
    float: left;
}

.login {
    font-size: 120%;
    font-style: italic;
    font-weight: bold;
    text-align: right;
    margin: 10px 8px;
}

#bahnen {
    margin: 5px 0 20px 0;
    clear: both;
    display: inline;
    float: left;
}

#bahnen div {
    width:100px;
    margin: 10px 7px;
    text-align: center;
    float: left;
}

#bahnen div img {
    margin: 0;
}


.frei {
    border: solid #fe192a 2px;
    background-color: #fe192a;
}

.belegt {
    border: solid red 2px;
    background-color: red;
}

.gesperrt {
    border: solid yellow 2px;
    background-color: yellow;
}

.reparatur {
    border: solid grey 2px;
    background-color: grey;
}

#datum1 {
    margin: 0;
    width:80px;
}

#zeitText1 input{
    margin: 2px 10px;
    display: inline-block;
}

#zeit1 {
    width: 40px;
}

#zeit2 {
    width: 40px;
}

#zeitText3 {
    margin: 2px 10px;
    float: left;
}

#zeit3 {
    width: 40px;
}


#pruefReservButton {
    margin: 2px 10px;
    visibility: visible;
}

.belegung {
    margin: 30px auto;
    width: 80%;
}

.belegung tr td{
    margin: 2px 10px;
    border: dotted #e7f0ec 1px;
}

#bahnen #indexTermin {
    display: block;
    margin: 50px;
}

#bahnen #indexSuche {
    margin: 50px;
    display: block;
}

#suchen {
    clear: both;
    margin-top: 20px;
}


#configs {
    visibility: hidden;
}

#menu {
    padding: 10px;
    margin-bottom: 10px;
}

#content {
    padding: 10px;
    position: relative;
}
	
#new_reservation {
    margin-bottom: 20px;
}

#new_reservation table {
    text-align: left;
}

#new_reservation td:first-child {
    width: 60px;
}

#select_form {
    margin-bottom: 20px;
}

#select_form table {
    text-align: left;
}

#select_form td:first-child {
    width: 60px;
}

