* {
  margin: 0;
  padding: 0;
}


html,body {
  background-color: #020302;
  height: 100%;
  width: 100%;
  overflow: auto;
  font-family: Verdana, Arial, sans-serif;
  color: #F4F4F4;
  font-size: 1.0em;
  line-height: 1.2em;
}


body {
  background-image: url(<%= asset_path 'background.png' %>);
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: center top;
}


h1 {
  font-size: 150%;
  margin-bottom: 10px;
  text-align: center;
  padding: 15px;
}


h2 {
  font-size: 130%;
  margin-bottom: 15px;
  border-bottom: 1px solid #F4F4F4;
  padding-bottom: 5px;
}


h3 {
  font-size: 130%;
}


h4 {
  font-size: 120%;
}


img.centered {
  margin: 0 auto;
  display: block;	
}


a {
  text-decoration: none;
}


a.link,
a:link,
a.visited,
a:visited,
a.active,
a:active {
  color: #82BDE4;
}


ul {
  list-style-type: none;
}


table {
  text-align: center;
  margin-bottom: 10px;
}


td {
  padding-bottom: 7px;
  padding-top: 4px;
}


#container {
  margin: 0 auto;
  width: 800px;
  min-height: 101%;
  position: relative;
  left: 7px;
}


#login {
  float: right;
  margin-right: 30px;
  
  font-size: 120%;
  font-style: italic;
  font-weight: bold;
}


.clear {
  clear: both;
}


#menu {
  margin: 0 30px 10px;
  text-align: center;
  font-size: 117%;
}

#content {
  margin: 30px;
  position: relative;
}

#content > div,h1 {
  margin-bottom: 20px;
  padding: 10px;

  border: 5px solid #82BDE4;
    
  -moz-border-radius:7px;
	-webkit-border-radius:7px;
	border-radius:7px;
}

#content p {
  margin-bottom: 15px;
}

.content_box {
  margin-bottom: 10px;
  padding: 10px;
  border: 5px solid #82BDE4;
    
  -moz-border-radius:7px;
	-webkit-border-radius:7px;
	border-radius:7px;
}

.option_box {
  display: inline-block;
}

.error_box {
  border-color: #fe192a  !important; 
}
