* {
  margin: 0;
  padding: 0;
}


html,body {
  background-color: #020302;
  height: 100%;
  width: 100%;
  overflow: auto;
  font-family: Verdana, Arial, sans-serif;
  color: #e7f0ec;
  font-size: 1.0em;
  line-height: 1.2em;
}


body {
  background-image: url(<%= asset_path 'background.png' %>);
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: center top;
}


h1 {
  font-size: 150%;
  margin-bottom: 15px;
  text-align: center
}


h2 {
  font-size: 130%;
  margin-bottom: 5px;
  border-bottom: 1px solid #e7f0ec;
  padding-bottom: 5px;
}


h3 {
  font-size: 130%;
}


h4 {
  font-size: 120%;
}


img.centered {
  margin: 0 auto;
  display: block;	
}


a {
  text-decoration: none;
}


a.link,
a:link,
a.visited,
a:visited,
a.active,
a:active {
  color: #82bde4;
}


ul {
  list-style-type: none;
}


table {
  text-align: center;
  margin-bottom: 10px;
}


td {
  padding-bottom: 7px;
}


#container {
  margin: 0 auto;
  background-color: #020302;
  width: 800px;
  min-height: 101%;
  position: relative;
  left: 6px;
}


#login {
  font-size: 120%;
  font-style: italic;
  font-weight: bold;
  text-align: right;
  margin: 10px 8px;
}


.clear {
  clear: both;
}


#menu {
  padding: 10px;
  margin-bottom: 10px;
  text-align: center;
}

#content {
  margin: 30px;
  position: relative;
}

#content > div,p,form {
  margin: 20px 0;
}
