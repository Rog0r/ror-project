<table>
  <tr>
    <td>Datum: </td>
    <td><%= reservation.date.strftime "%d.%m.%Y" %></td>
  </tr>
  <tr>
    <td>Von: </td>
    <td><%= reservation.start_time.strftime "%H:%M" %></td>
  </tr>
  <tr>
    <td>bis: </td>
    <td><%= reservation.end_time.strftime "%H:%M" %></td>
  </tr>
  <% if show_alleys == true %>
    <tr>
      <td>Bahnen: </td>
      <td>
        <% reservation.alley_reservations.each do |alley_reservation| %>
          <%= "#{alley_reservation.alley_number} " %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
